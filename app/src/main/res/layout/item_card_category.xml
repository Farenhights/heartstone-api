<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCategoryCardView"
        android:layout_width="@dimen/card_category_card_view_width"
        android:layout_height="@dimen/card_category_card_view_height"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_extra_extra_large"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_extra_extra_large"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardCategoryView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cardCategoryTitleTextView"
                style="@style/DefaultText"
                android:layout_marginStart="@dimen/margin_extra_extra_large"
                android:layout_marginBottom="@dimen/margin_extra_large"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_extra_large"
                app:layout_constraintBottom_toBottomOf="@+id/cardCategoryView"
                app:layout_constraintStart_toStartOf="@+id/cardCategoryView"
                tools:text="Druid" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>